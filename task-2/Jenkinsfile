pipeline {
    agent { label 'slave-node' }

    environment {
        ENVIRONMENT = (
            env.BRANCH_NAME.startsWith('dev')  ? 'dev'  :
            env.BRANCH_NAME.startsWith('test') ? 'test' :
            env.BRANCH_NAME.startsWith('prod') ? 'prod' :
            'unknown'
        )
    }

    stages {

        stage('Build') {
            steps {
                echo "===== BUILD STAGE ====="
                echo "Selected Environment: ${ENVIRONMENT}"
                sh 'echo Building the application.....'
            }
        }

        stage('Test') {
            steps {
                echo "===== TEST STAGE ====="
                echo "Selected Environment: ${ENVIRONMENT}"
                sh 'echo Running tests.....'
            }
        }

        stage('Deploy') {
            steps {
                echo "===== DEPLOY STAGE ====="
                echo "Deploying to environment: ${ENVIRONMENT}"
                sh """
                    echo Deploying to ${ENVIRONMENT}.....
                """
            }
        }
    }

    post {
        always {
            echo "Pipeline completed for environment: ${ENVIRONMENT}"
        }
    }
}
